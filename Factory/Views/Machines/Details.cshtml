<h2>Machine Details</h2>

<div>
  <h4>@Model.Name</h4>
  <hr />
  <dl class="row">
  <dt class="col-sm-2">
  Engineers Licensed to Repair:
  </dt>
  <dd class="col-sm-10">
  @if (Model.Engineers != null && Model.Engineers.Count > 0)
  {
  foreach (var em in Model.Engineers)
  {
    <div>@em.Engineer.Name</div>
  }
  }
  else
  {
  <div>This machine does not have any engineers assigned.</div>
  }
  </dd>
  </dl>
</div>
<div>
  <a asp-action="Edit" asp-route-id="@Model.MachineId">Edit</a> |
  <a asp-action="Delete" asp-route-id="@Model.MachineId">Delete</a> |
  <a asp-action="Index">Back to list</a>
</div>